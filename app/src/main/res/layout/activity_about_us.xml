<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAboutUs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/team_img_container"
        android:background="@drawable/grad">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/team_img"
            android:layout_centerHorizontal="true"
            android:src="@drawable/team"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="About Us"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/team_img"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/team_img_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="I am Deepak. This app is made as a part of capstone project"
                android:layout_marginTop="50dp"
                android:textAppearance="?android:textAppearanceLarge"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>